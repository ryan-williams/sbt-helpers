alias pst=parse_sbt_tags
parse_sbt_tags() {
	rA1 '/ version' "$@" | rv -- '--' | taats | pne 's/^.* (\w+) \/ version.*?\s+([\d.]+)-SNAPSHOT$/\1-\2/'
}
export -f parse_sbt_tags

sbt_tags() {
	sbt version | strip-colors | parse_sbt_tags | p 'echo {}; git tag {}'
}
export -f sbt_tags
